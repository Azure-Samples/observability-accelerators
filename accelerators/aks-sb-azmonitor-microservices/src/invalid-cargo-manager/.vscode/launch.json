  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Service",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/service/app.py",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}